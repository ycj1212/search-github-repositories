<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_user_avatar_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/iv_user_avatar_image_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_github_logo" />

    <TextView
        android:id="@+id/tv_github_repo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_github_repo_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="kunny/kunny-kotlin-book" />

    <TextView
        android:id="@+id/tv_github_repo_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_github_repo_name"
        app:layout_constraintStart_toStartOf="@id/tv_github_repo_name"
        app:layout_constraintTop_toBottomOf="@id/tv_github_repo_name"
        tools:text="No language specified" />

</androidx.constraintlayout.widget.ConstraintLayout>
